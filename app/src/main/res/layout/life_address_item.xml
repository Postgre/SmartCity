<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_116"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70">

            <TextView
                android:id="@+id/address_list_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:textSize="@dimen/ts_16" />

            <TextView
                android:id="@+id/address_list_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_list_tv_name"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="@dimen/ts_14" />

            <ImageView
                android:id="@+id/address_list_iv_edite"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/icon_xiugai" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@color/bg_gray" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:button="@drawable/address_item_cb_bg"
                android:id="@+id/address_item_cb_isdefault"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/address_item_cb_isdefault"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="默认地址"
                android:textColor="#666666"
                android:textSize="@dimen/ts_16" />

            <ImageView
                android:id="@+id/address_list_delete"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/icon_car_shangchu" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>