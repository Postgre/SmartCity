<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/title_bar_style">

    <ImageView
        android:id="@+id/back_img"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        android:layout_centerVertical="true"
        android:padding="@dimen/x25"
        android:src="@mipmap/w_back_left"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/left_sao"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        android:layout_centerVertical="true"
        android:padding="@dimen/x25"
        android:src="@mipmap/icon_scan"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/title_rela"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x90"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/title_tv"
            style="@style/title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/title_tvs"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x15"
            android:layout_alignBottom="@id/title_tv"
            android:layout_marginBottom="@dimen/x5"
            android:layout_toRightOf="@id/title_tv"
            android:src="@mipmap/w_jiantou_down"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/right_fq"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x90"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/x15"
        android:src="@mipmap/icon_fq"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x90"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="@dimen/x25"
        android:text="完成"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/right_search"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/right_fq"
        android:padding="@dimen/x25"
        android:src="@mipmap/sousuo"
        android:visibility="gone" />

    <!--<ImageView-->
        <!--android:id="@+id/right_sousuo"-->
        <!--android:layout_width="@dimen/x90"-->
        <!--android:layout_height="@dimen/x90"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:padding="@dimen/x20"-->
        <!--android:src="@mipmap/sousuo"-->
        <!--android:visibility="gone" />-->
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/x20"
        android:textColor="#ffffff"
        android:text="@string/cancel"
        android:textSize="14sp"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/tv_back"
        android:layout_toRightOf="@id/back_img"
        android:background="@drawable/et_bg">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/icon_search" />

        <EditText
            android:id="@+id/edittext_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv"
            android:background="@drawable/et_bg"
            android:drawablePadding="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:hint="请输入圈子名称"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>