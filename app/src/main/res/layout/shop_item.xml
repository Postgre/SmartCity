<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@color/white">

    <ImageView
        android:layout_marginLeft="@dimen/dp_9"
        android:id="@+id/shop_item_iv_show"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerVertical="true"
        android:src="@mipmap/tp_shangd1" />

    <TextView
        android:id="@+id/shop_iten_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/shop_item_iv_show"
        android:singleLine="true"
        android:text="武汉中南服饰"
        android:textColor="@color/black1"
        android:textSize="@dimen/ts_16" />

    <LinearLayout
        android:id="@+id/shop_item_ll"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/shop_iten_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_toRightOf="@+id/shop_item_iv_show"
        android:drawableLeft="@mipmap/dingwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@mipmap/dingwei"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_3"
            android:id="@+id/shop_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="武汉666号"
            android:textColor="#999999"
            android:textSize="@dimen/ts_11" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_item_ll"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_12"

        android:layout_toRightOf="@+id/shop_item_iv_show"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_11"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_ying" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="8:00 -21:00"
            android:textColor="@color/red1"
            android:textSize="@dimen/ts_10" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_11"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="right"
        android:text="月销 20万币"
        android:textColor="#AAAAAA"
        android:textSize="@dimen/ts_10" />

    <ImageView
        android:id="@+id/shop_item_iv_youhui"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_toRightOf="@+id/shop_iten_name"
        android:src="@mipmap/icon_youhui" />

    <ImageView
        android:id="@+id/shop_item_iv_song"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_toRightOf="@+id/shop_item_iv_youhui"
        android:src="@mipmap/icon_song" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:text="500m"
        android:textColor="#999999"
        android:textSize="@dimen/ts_12" />
</RelativeLayout>

