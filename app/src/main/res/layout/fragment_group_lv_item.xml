<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/group_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/circle_u4" />
            <TextView
                android:id="@+id/biaoqian"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/shijianbiaoqian1"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/group_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/meili_caifuxin"
                    android:gravity="center_vertical"
                    android:text="尊享圈"
                    android:textColor="@color/red"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/group_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="女人花瑜伽圈子"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/group_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="瑜伽里的美好，坚持练习总会遇到。"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="创建者：sss"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/group_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="圈子人数：32人"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/group_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:text="活动次数：61"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
               <!-- <LinearLayout
                    android:layout_width="@dimen/x200"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/group_nums"
                    android:layout_marginLeft="@dimen/x20"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/group_kan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/circle_gk"
                        android:drawablePadding="@dimen/x8"
                        android:text="360"
                        android:textColor="@color/gray2"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/group_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:drawableLeft="@mipmap/circle_sc"
                        android:drawablePadding="@dimen/x8"
                        android:text="150"
                        android:textColor="@color/gray2"
                        android:textSize="11sp" />
                </LinearLayout>-->

                <TextView
                    android:id="@+id/group_join"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_blue"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="申请加入圈子"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>