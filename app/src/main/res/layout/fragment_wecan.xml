<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="239dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="match_parent"
                    android:layout_height="239dp"
                    android:background="@mipmap/wocan_detial" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="141dp"
                    android:layout_marginTop="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_addphoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@mipmap/addphoto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_addphoto"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="上传照片"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:paddingBottom="25dp"
                    android:text="0张"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:background="#ffffff">

                <TextView
                    android:id="@+id/tv_leixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32dp"
                    android:text="选择服务类型:"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_leixin"
                    android:text="餐饮美食"
                    android:textColor="#777777"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/b_back_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#eeeeee"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/kongtubiao" />

                <TextView
                    android:id="@+id/tv_wocan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv"
                    android:text="我能"
                    android:textSize="17dp" />

                <EditText


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_wocan"
                    android:background="@null"
                    android:hint="如：做菜，代驾，陪练"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:text="0/8"
                    android:textColor="#777777"
                    android:textSize="17dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="32dp"
                    android:background="#eeeeee"></View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <EditText

                    android:layout_width="328dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="top|left"
                    android:hint="描述一下您的服务，让大家更感兴趣"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:text="来给你的服务定一个价吧"
                android:textColor="#333333"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <EditText

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:gravity="center"
                    android:hint="输入价格"
                    android:textColorHint="#ff0000"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/" />

                <EditText

                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="如:1,次"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="如果不填写则表示价格面议"
                    android:textSize="9sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#eeeeee"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="联系电话："
                    android:textSize="17dp" />

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="请输入联系方式"
                    android:textSize="17dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#eeeeee"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_nouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="联系地址："
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tv_nouse"

                    android:hint="请选择地址"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/service_xiala" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c1c1c1"></View>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="top|left"
                android:hint="请填写您的详细地址，方便更快的能找到您"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#eeeeee"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:text="可服务时间"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.smartcity.customview.RoundProgressBar
                        android:id="@+id/roundProgressBar1"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/roundProgressBar1"
                        android:layout_marginRight="32dp"
                        android_custom:roundColor="#0379ff"
                        android_custom:roundProgressColor="#0379ff"
                        android_custom:roundWidth="1dip"
                        android_custom:style="FILL" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="星期一" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.smartcity.customview.RoundProgressBar
                        android:id="@+id/roundProgressBar2"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/roundProgressBar1"
                        android:layout_marginRight="32dp"
                        android_custom:roundColor="#0379ff"
                        android_custom:roundProgressColor="#0379ff"
                        android_custom:roundWidth="1dip"
                        android_custom:style="FILL" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="星期二" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.smartcity.customview.RoundProgressBar
                        android:id="@+id/roundProgressBar3"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/roundProgressBar1"
                        android:layout_marginRight="32dp"
                        android_custom:roundColor="#0379ff"
                        android_custom:roundProgressColor="#0379ff"
                        android_custom:roundWidth="1dip"
                        android_custom:style="FILL" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="星期三" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.smartcity.customview.RoundProgressBar
                        android:id="@+id/roundProgressBar4"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/roundProgressBar1"
                        android:layout_marginRight="32dp"
                        android_custom:roundColor="#0379ff"
                        android_custom:roundProgressColor="#0379ff"
                        android_custom:roundWidth="1dip"
                        android_custom:style="FILL" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="星期四" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.smartcity.customview.RoundProgressBar
                        android:id="@+id/roundProgressBar5"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/roundProgressBar1"
                        android:layout_marginRight="32dp"
                        android_custom:roundColor="#0379ff"
                        android_custom:roundProgressColor="#0379ff"
                        android_custom:roundWidth="1dip"
                        android_custom:style="FILL" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="星期五" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.smartcity.customview.RoundProgressBar
                        android:id="@+id/roundProgressBar6"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/roundProgressBar1"
                        android:layout_marginRight="32dp"
                        android_custom:roundColor="#0379ff"
                        android_custom:roundProgressColor="#0379ff"
                        android_custom:roundWidth="1dip"
                        android_custom:style="FILL" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="星期六" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.smartcity.customview.RoundProgressBar
                        android:id="@+id/roundProgressBar7"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/roundProgressBar1"
                        android:layout_marginRight="32dp"
                        android_custom:roundColor="#0379ff"
                        android_custom:roundProgressColor="#0379ff"
                        android_custom:roundWidth="1dip"
                        android_custom:style="FILL" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="星期日" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/iv_sm"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/fw_shangmen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/iv_sm"
                    android:text="上门服务"
                    android:textSize="17sp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="12dp"
                    android:background="@android:color/transparent"
                    android:button="@drawable/ios7_btn"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#eeeeee"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <Button
                    android:layout_width="295dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="18dp"
                    android:background="@mipmap/tijiao"
                    android:text="提交"
                    android:textColor="#ffffff" />
            </RelativeLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>