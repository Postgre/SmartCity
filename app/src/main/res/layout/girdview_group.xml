<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x340"
    android:layout_height="@dimen/x340"
    android:padding="@dimen/x10"
    android:gravity="center"
    android:orientation="vertical" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/life_gird_image"
        android:layout_width="@dimen/x340"
        android:layout_height="@dimen/x340"/>

    <TextView
        android:id="@+id/life_gird_chuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/quan_jia"
        android:layout_centerInParent="true"
        android:drawablePadding="@dimen/x10"
        android:text="创建相册"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/life_gird_image"
            android:paddingLeft="@dimen/x10"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/title"
            android:drawableLeft="@mipmap/pt_iconfont_21"
            android:ellipsize="end"
            android:paddingLeft="@dimen/x10"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/number"
            android:paddingLeft="@dimen/x10"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>