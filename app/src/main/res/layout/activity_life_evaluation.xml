<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/life_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:src="@mipmap/tp_yifu1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:maxLines="2"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/ts_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="@color/bg_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_185"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_99"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="请写下对宝贝的感受吧,对他人帮助很大哦!"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_19"
                    android:textColor="#999999"
                    android:textSize="@dimen/ts_14" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lisfe_eval_chose_photo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_86"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_13"
                    android:paddingTop="@dimen/dp_13" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="@color/bg_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:singleLine="true"
                        android:text="描述相符"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/ts_15" />

                    <RatingBar
                        android:stepSize="1.0"
                        style="@style/life_eval_custom_ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:numStars="5"
                        android:rating="4" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:singleLine="true"
                        android:text="发货速度"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/ts_15" />

                    <RatingBar
                        android:stepSize="1.0"
                        style="@style/life_eval_custom_ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:numStars="5"
                        android:rating="4"
                       />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:singleLine="true"
                        android:text="服务态度"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/ts_15" />


                    <RatingBar

                        style="@style/life_eval_custom_ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:numStars="5"
                        android:rating="4" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_183"
                android:background="@color/bg_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_43">

                    <CheckBox

                        style="@style/life_evaluation"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:singleLine="true"
                        android:text="匿名评论"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/ts_15" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="#ef0303"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_16" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
