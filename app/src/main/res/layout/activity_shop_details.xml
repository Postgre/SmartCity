<?xml version="1.0" encoding="utf-8"?>


<com.cpoopc.scrollablelayoutlib.ScrollableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollableLayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cdcdcd"
        android:orientation="vertical">
        <include layout="@layout/life_head" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_285" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_17" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_12"
            android:src="@mipmap/fanhui" />

        <FrameLayout
            android:id="@+id/shop_detail_rl_gouche"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12">

            <ImageView
                android:id="@+id/shop_detail_iv_gouche"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/gouwuche" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="3"
                android:textColor="@color/red1"
                android:textSize="@dimen/ts_12" />
        </FrameLayout>


        <ImageView
            android:id="@+id/shop_detail_iv_collection"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_toLeftOf="@+id/shop_detail_rl_gouche"
            android:src="@mipmap/shoucang" />

        <ImageView
            android:id="@+id/shop_detail_iv_kefu"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_toLeftOf="@+id/shop_detail_iv_collection"
            android:src="@mipmap/kefu" />


    </RelativeLayout>

    <ScrollView
        android:id="@+id/shop_detail_scro_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/shop_detail_ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_134"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_18"
                    android:maxLines="2"
                    android:text="2016 流行asfdsfdasfdasfdasfdasfasdfasd"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/ts_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_18">

                    <TextView

                        android:id="@+id/shop_detail_tv_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:text="¥"
                        android:textColor="@color/red1"
                        android:textSize="@dimen/ts_10" />

                    <TextView
                        android:id="@+id/shop_detail_tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_toRightOf="@+id/shop_detail_tv_icon"
                        android:text="666"
                        android:textColor="@color/red1"
                        android:textSize="@dimen/ts_21" />

                    <TextView
                        android:id="@+id/shop_detail_tv_collection_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@mipmap/xiangqingxihuan"
                        android:drawablePadding="@dimen/dp_3"
                        android:gravity="center"
                        android:paddingRight="@dimen/dp_13"
                        android:text="666"
                        android:textColor="@color/red1"
                        android:textSize="@dimen/ts_21" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_17"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:drawableLeft="@mipmap/cu"
                        android:drawablePadding="@dimen/dp_3"
                        android:singleLine="true"
                        android:text="全场5折优惠券"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/ts_13" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_17"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:drawableLeft="@mipmap/song"
                        android:drawablePadding="@dimen/dp_3"
                        android:singleLine="true"
                        android:text="送货上门"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/ts_13" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:singleLine="true"
                    android:text="选择 规格"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/ts_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_13"
                    android:src="@mipmap/b_back_right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/shop_detail_commodity_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:singleLine="true"
                    android:text="商品品论"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/ts_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_13"
                    android:drawablePadding="@dimen/dp_3"
                    android:drawableRight="@mipmap/b_back_right"
                    android:text="更多" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="#cac5c9" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25">

                    <ImageView
                        android:id="@+id/shop_detail_iv_shop"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/icon_ying" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/shop_detail_iv_shop"
                        android:singleLine="true"
                        android:text="速写小店" />

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_13"
                        android:src="@mipmap/b_back_right" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/progressbar_app"
                    android:textSize="@dimen/dp_13" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_13"
                android:text="商品详情" />

            <RelativeLayout
                android:layout_width="@dimen/dp_310"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/black1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="adfasd" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdfasd" />
        </LinearLayout>
    </ScrollView>
</com.cpoopc.scrollablelayoutlib.ScrollableLayout>


