<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <CheckBox
            android:id="@+id/cart_group_box"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:button="@drawable/cart_check_box_bg" />
        <LinearLayout
            android:id="@+id/cart_group_ll_name_container"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/cart_group_box"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cart_group_shop_name"
                android:textSize="@dimen/ts_15"
                android:textColor="#666666"
                android:text="速写小店"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_jiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cart_group_tv_youhui"
                android:drawablePadding="@dimen/dp_5"
                android:drawableLeft="@mipmap/icon_car_youhui"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/ts_12"
                android:textColor="#F04844"
                android:text="可用优惠券"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/cart_group_ll_dis_container"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/cart_group_box"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cart_group_tv_manjian"
                android:drawablePadding="@dimen/dp_3"
                android:drawableLeft="@mipmap/icon_car_yuandian"
                android:textSize="@dimen/ts_13"
                android:textColor="@color/black1"
                android:text="满199减10"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/cart_group_tv_baoyou"
                android:drawablePadding="@dimen/dp_3"
                android:drawableLeft="@mipmap/icon_car_yuandian"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/ts_13"
                android:textColor="@color/black1"
                android:text="满199包邮"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:textColor="@color/black1"
            android:textSize="@dimen/ts_14"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/car_group_tv_edite"
            android:text="完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
    </RelativeLayout>
</LinearLayout>